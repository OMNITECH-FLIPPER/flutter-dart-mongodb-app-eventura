# MongoDB Connection - REQUIRED
MONGODB_URI=

# Server Configuration - REQUIRED
PORT=3000
NODE_ENV=development

# JWT Secret - REQUIRED (must be a secure random string)
JWT_SECRET=

# Email Configuration - REQUIRED (for notifications)
EMAIL_USER=
EMAIL_PASS=

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,pdf,doc,docx

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database
DB_NAME=MongoDataBase
DB_USERS_COLLECTION=users
DB_EVENTS_COLLECTION=events
DB_REGISTRATIONS_COLLECTION=registrations
DB_NOTIFICATIONS_COLLECTION=notifications
